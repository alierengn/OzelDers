<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="10"
    android:background="@color/backcolor2">



    <ImageView
        android:id="@+id/simge"
        android:layout_height="wrap_content"
        android:layout_width="104dp"
        android:layout_columnSpan="1"
        android:layout_rowSpan="5"
        android:background="@color/com_facebook_button_background_color_pressed"
        android:focusable="false"
        android:focusableInTouchMode="false"

       />

    <TextView
        android:id="@+id/txt_isim"
        android:text="isim"

        android:layout_gravity="fill_horizontal"

        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:padding="10dp"

        android:textSize="20dp"
        android:textAllCaps="true"

        style="@style/CustomFontStyle"

        android:focusable="false"
        android:focusableInTouchMode="false"

        />

    <TextView
        android:id="@+id/txt_ders"
        android:text="ders"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_gravity="fill_horizontal"
        android:padding="10dp"
        android:background="@color/backcolor2"

        android:textSize="17dp"
        android:textStyle="italic"
        android:drawableLeft="@drawable/ic_ders"
        android:drawablePadding="8dp"

        android:focusable="false"
        android:focusableInTouchMode="false"
        />


    <TextView
        android:id="@+id/txt_egitim"
        android:text="egitim"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="10dp"
        android:background="@color/backcolor2"

        android:textSize="17dp"
        android:textStyle="italic"
        android:drawableLeft="@drawable/ic_egitim_24dp"
        android:drawablePadding="8dp"

        android:focusable="false"
        android:focusableInTouchMode="false"

        />


    <TextView
        android:id="@+id/txt_sehir"
        android:text="sehir"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_gravity="fill_horizontal"
        android:padding="10dp"
        android:background="@color/backcolor2"

        android:textSize="15dp"
        android:textStyle="italic"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="8dp"

        android:focusable="false"
        android:focusableInTouchMode="false"

        />


    <RatingBar
        android:id="@+id/listeratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_columnSpan="2"
        android:layout_rowSpan="1"
        android:layout_gravity="left"

        android:paddingLeft="3dp"
        android:stepSize="1.0"
        android:isIndicator="true"
        android:rating="1"
        android:theme="@style/RatingBar"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"

        android:focusable="true"
        android:focusableInTouchMode="true"
        />

</GridLayout>