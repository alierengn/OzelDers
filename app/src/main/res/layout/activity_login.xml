<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="6"
    android:rowCount="8"
    android:background="@color/backcolor2">


    <ImageView
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_rowSpan="6"
        android:layout_height="126dp"
        android:layout_width="150dp"
        android:id="@+id/simge"
        android:layout_column="1" />

    <EditText
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="İsim"
        android:textSize="20dp"
        android:id="@+id/edit_isim"
        />

    <EditText
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Egitim"
        android:id="@+id/edit_egitim"/>

    <EditText
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Yaş"
        android:id="@+id/Edit_yas"/>

    <EditText
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Uzmanlık alanı"
        android:id="@+id/Edit_alan"
        android:layout_width="match_parent" />
    <EditText
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Şehir"
        android:id="@+id/edit_sehir"/>
    <EditText
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Tel"
        android:id="@+id/edit_tel"/>
    <EditText
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"

        android:padding="10dp"
        android:hint="Kısa Bilgi"
        android:id="@+id/edit_acıklama"
        />
    <Button
        android:layout_columnSpan="6"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="2"
        android:padding="10dp"
        android:hint="Kaydet"
        android:id="@+id/btn_login"/>


</GridLayout>